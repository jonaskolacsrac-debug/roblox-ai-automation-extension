{
  "manifest_version": 3,
  "name": "Roblox AI Automation",
  "version": "1.0.0",
  "description": "AI-powered automation for Roblox games",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://*.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*", "https://*.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Roblox AI Automation"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.roblox.com/*", "https://*.roblox.com/*"]
    }
  ]
}
